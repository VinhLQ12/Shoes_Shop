@page
@model Shoes_Shop.Pages.Card.ListModel
@{

}


<!-- breadcrumb -->
<div class="container">
    <div class="bread-crumb flex-w p-l-25 p-r-15 p-t-30 p-lr-0-lg">
        <a href="index.html" class="stext-109 cl8 hov-cl1 trans-04">
            Home
            <i class="fa fa-angle-right m-l-9 m-r-10" aria-hidden="true"></i>
        </a>

        <span class="stext-109 cl4">
            Shoping Cart
        </span>
    </div>
</div>
@if (Model.Carts.Count == 0)
{
    <div class="bg0 p-t-75 p-b-85">
        <div class="container" style="height:130px">
            <div class="row" style="display:inline">
                
                    <h1 style="font-size:25px" class="text-center stext-111 cl6 p-t-2">
                         No item added to cart !!!
                    </h1>
                
            </div>
        </div>
    </div>
}
else
{
    <!-- Shoping Cart -->
    <div class="bg0 p-t-75 p-b-85">
        <div class="container">
            <div class="row">
                <div class="col-lg-10 col-xl-7 m-lr-auto m-b-50">
                    <div class="m-l-25 m-r--38 m-lr-0-xl">
                        <div class="wrap-table-shopping-cart">
                            <table class="table-shopping-cart">
                                <tr class="table_head">
                                    <th class="column-1">Product</th>
                                    <th class="column-2"></th>
                                    <th class="column-3">Type</th>
                                    <th class="column-4">Quantity</th>
                                    <th class="column-5">Price</th>
                                </tr>
                                @foreach (var item in @Model.Carts)
                                {
                                    <tr class="table_row" data-product-id="@item.Product.Id">
                                        <td class="column-1">
                                            <a style="text-decoration:none" class="btn-remove-cart" href="./List?handler=Remove&id=@item.Product.Id">
                                                <div class="how-itemcart1">
                                                    <img src="@item.Product.Image" alt="IMG">

                                                </div>
                                            </a>


                                        </td>
                                        <td class="column-2">@item.Product.Name</td>

                                        <td class="column-3">@item.Color.ColorName, @item.Size.SizeName</td>
                                        <td class="column-4">
                                            <div class="wrap-num-product  flex-w m-l-auto m-r-0">
                                                <div class="btn-num-product-down cl8 hov-btn3 trans-04 flex-c-m">
                                                    <i class="fs-16 zmdi zmdi-minus"></i>

                                                </div>

                                                <input class="mtext-104 cl3 txt-center num-product" type="number" name="num-product1" value="@item.Quantity">

                                                <div class="btn-num-product-up cl8 hov-btn3 trans-04 flex-c-m">
                                                    <i class="fs-16 zmdi zmdi-plus"></i>
                                                </div>
                                            </div>
                                        </td>
                                        <td class="column-5">$ @item.Product.Price
                                        <td>
                                    </tr>

                                }


                            </table>
                        </div>

                        <div class="flex-w flex-sb-m bor15 p-t-18 p-b-15 p-lr-40 p-lr-15-sm">
                            <div class="flex-w flex-m m-r-20 m-tb-5">
                                <input class="stext-104 cl2 plh4 size-117 bor13 p-lr-20 m-r-10 m-tb-5" type="text" name="coupon" placeholder="Coupon Code">

                                <div class="flex-c-m stext-101 cl2 size-118 bg8 bor13 hov-btn3 p-lr-15 trans-04 pointer m-tb-5">
                                    Apply coupon
                                </div>
                            </div>

                            <div class="flex-c-m stext-101 cl2 size-119 bg8 bor13 hov-btn3 p-lr-15 trans-04 pointer m-tb-10">
                                Update Cart
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-sm-10 col-lg-7 col-xl-5 m-lr-auto m-b-50">
                    <form method="post">
                        <div class="bor10 p-lr-40 p-t-30 p-b-40 m-l-63 m-r-40 m-lr-0-xl p-lr-15-sm">
                            <h4 class="mtext-109 cl2 p-b-30">
                                Cart Totals
                            </h4>

                            <div class="flex-w flex-t bor12 p-b-13">
                                <div class="size-208">
                                    <span class="stext-110 cl2">
                                        Subtotal:
                                    </span>
                                </div>

                                <div class="size-209">
                                    <span class="mtext-110 cl2 cart-total-price">
                                        $@Model.totalPrice
                                    </span>
                                </div>
                            </div>

                            <div class="flex-w flex-t bor12 p-t-15 p-b-30">
                                <div class="size-208 w-full-ssm">
                                    <span class="stext-110 cl2">
                                        Shipping:
                                    </span>
                                </div>

                                <div class="size-209 p-r-18 p-r-0-sm w-full-ssm">
                                    <p class="stext-111 cl6 p-t-2">
                                        There are no shipping methods available. Please double check your address, or contact us if you need any help.
                                    </p>

                                    <div class="p-t-15">
                                        <span class="stext-112 cl8">
                                            Calculate Shipping
                                        </span>

                                        <div class="rs1-select2 rs2-select2 bor8 bg0 m-b-12 m-t-9">
                                            <select class="js-select2" name="paymentMethod">
                                                <option value="Pay on receipt">Pay on receipt</option>
                                            </select>
                                            <div class="dropDownSelect2"></div>
                                        </div>

                                        <div class="bor8 bg0 m-b-12">
                                            <input class="stext-111 cl8 plh3 size-111 p-lr-15" type="text" name="deliverylocatiton" placeholder="Delivery Location">
                                        </div>


                                    </div>
                                </div>
                            </div>

                            <div class="flex-w flex-t p-t-27 p-b-33">
                                <div class="size-208">
                                    <span class="mtext-101 cl2">
                                        Total:
                                    </span>
                                </div>

                                <div class="size-209 p-t-1">
                                    <span class="mtext-110 cl2">
                                        <input hidden name="TotalPrice" value="@Model.totalPrice" />
                                        $@Model.totalPrice
                                    </span>
                                </div>
                            </div>

                            <button type="submit" class="flex-c-m stext-101 cl0 size-116 bg3 bor14 hov-btn3 p-lr-15 trans-04 pointer">
                                Place Order
                            </button>
                        </div>
                    </form>
                </div>


            </div>
        </div>
    </div>
}



@section Scripts {
    <script>
        $('.btn-num-product-down').on('click', function () {
            var numProduct = parseInt(Number($(this).prev().val()));
            if (numProduct > 0) {
                var productId = parseInt($(this).closest('tr').data('product-id'));
                $.ajax({
                    url: '/Card/List?handler=UpdateQuantity',
                    method: 'POST',
                    data: { productId: productId, quantity: numProduct },
                    success: function (response) {
                        if (response.success) {
                            console.log(response.message);
                        }
                    },
                    error: function (xhr, textStatus, errorThrown) {
                        console.log('Error updating cart: ' + textStatus);
                    }
                });
            }
        });

        $('.btn-num-product-up').on('click', function () {
            var numProduct = parseInt(Number($(this).prev().val()));
            var productId = parseInt($(this).closest('tr').data('product-id'));
            $.ajax({
                url: '/Card/List?handler=UpdateQuantity',
                method: 'POST',
                data: { productId: productId, quantity: numProduct },
                success: function (response) {
                    if (response.success) {
                        console.log(response.message);
                    }
                },
                error: function (xhr, textStatus, errorThrown) {
                    console.log('Error updating cart: ' + textStatus);
                }
            });
        });

