@page
@using Shoes_Shop.Models
@model Shoes_Shop.Pages.Admin.ManageOrderModel
@{
    Layout = "./Shared/_Layout.cshtml";
    dynamic orders = Model.Orders;
}
All order:

@foreach (Order order in orders)
{
    <div class="order">
        <div class="order_info">
            <span>@order.User.Username</span>
            <span>@order.DateOrdered.ToString("dd/MM/yyyy")</span>
        </div>
        @foreach (OrderDetail orderDetail in order.OrderDetails)
        {
            <div class="order_detail">
                <img src="" />
                <div style="display: flex; flex-direction: column; justify-content: space-between;">
                    <span>Size: @orderDetail.Size</span>
                    <span>Color: @orderDetail.Color</span>
                </div>

                <div>
                    <span>x @orderDetail.Quantity</span>
                    <span>@orderDetail.Price</span>
                </div>
            </div>
        }
        <div class="text-right">
             <span>Total: @order.TotalPrice</span>
        </div>
    </div>
}

<style>
    .order {
        font-size: 20px;
        color: white;
        display: flex;
        flex-direction: column;
        border-radius: 10px;
        background-color: #486dda;
        padding: 10px 20px;
        margin: 10px 0;
    }

    .order_info {
        display: flex;
        justify-content: space-between;
        border-bottom: 1px solid;
        align-items: center;
    }

    .order_detail {
        display: flex;
        justify-content: space-between;
    }
</style>