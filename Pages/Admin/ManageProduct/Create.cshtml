@page
@model Shoes_Shop.Pages.Admin.ManageProduct.CreateModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/Admin/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" asp-page-handler="CreateProduct" enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for="Product.Name" class="control-label"></label>
                <input name="name" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Product.Description" class="control-label"></label>
                <input name="description" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Product.Price" class="control-label"></label>
                <input name="price" type="number" step=".01" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Product.Image" class="control-label"></label>
                <input name="image" type="file" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Product.CategoryId" class="control-label"></label>
                <select name="category" class ="form-control" asp-items="ViewBag.CategoryId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>


