@page
@model Shoes_Shop.Pages.Admin.ManageProduct.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Admin/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Product</h4>
<hr />
<div class="row">
    <div class="col-md-4">
         <form method="post" asp-page-handler="EditProduct" enctype="multipart/form-data">
            <input name="idEdit" type="hidden" asp-for="Product.Id" />
             <div class="form-group">
                <label asp-for="Product.Name" class="control-label"></label>
                <input asp-for="Product.Name"  name="name" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Product.Description" class="control-label"></label>
                <input asp-for="Product.Description" name="description" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Product.Price" class="control-label"></label>
                <input asp-for="Product.Price"  name="price" type="number" step=".01" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Product.Image" class="control-label"></label>
                <input asp-for="Product.Image"  name="image" type="file" class="form-control" />
                <img width="500px" height="200px" style="object-fit: contain" src="~/Admin/ImageProduct/@Model.Product.Image"/>
            </div>
            <div class="form-group">
                <label asp-for="Product.CategoryId" class="control-label"></label>
                <select asp-for="Product.CategoryId" name="category" class ="form-control" asp-items="ViewBag.CategoryId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

