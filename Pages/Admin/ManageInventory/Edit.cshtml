@model Shoes_Shop.Pages.Admin.ManageInventory.EditModel

<h4>Inventory</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Inventory.Id" />
            <div class="form-group">
                <label asp-for="Inventory.ProductId" class="control-label"></label>
                <select asp-for="Inventory.ProductId" class="form-control" asp-items="ViewBag.ProductId"></select>
                <span asp-validation-for="Inventory.ProductId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Inventory.SizeId" class="control-label"></label>
                <select asp-for="Inventory.SizeId" class="form-control" asp-items="ViewBag.SizeId"></select>
                <span asp-validation-for="Inventory.SizeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Inventory.ColorId" class="control-label"></label>
                <select asp-for="Inventory.ColorId" class="form-control" asp-items="ViewBag.ColorId"></select>
                <span asp-validation-for="Inventory.ColorId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Inventory.Quantity" class="control-label"></label>
                <input asp-for="Inventory.Quantity" class="form-control" />
                <span asp-validation-for="Inventory.Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

